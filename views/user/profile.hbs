<script>
    $(window).on('load', function() { // makes sure the whole site is loaded 
        $('#status').fadeOut(); // will first fade out the loading animation 
        $('#preloader').delay(5).fadeOut('slow'); // will fade out the white DIV that covers the website. 
        $('body').delay(5).css({'overflow':'visible'});
        })


        $("#address").submit(function(e) {
            e.preventDefault();
        });


        $(document).ready(function(){ $("#address").validate(
    { rules:
            { 
                add_name: {
                required: true
                
                 },
                 add:{
                  required:true,
                  lettersonly:true
                  
                 },
                 locality:{
                  required:true,
                  noSpace:true

                 },
                 town:{
                  required:true,
                  noSpace:true

                 },
                 district:{
                  required:true,
                  noSpace:true

                 },
                 pin:{
                  required:true,
                  number:true,
                  noSpace:true

                 }
            },
            messages:{
                add_name:'enter the address name',
                add:'enter house/company/etc',
                locality:'enter your locality',
                town:'enter your town name',
                district:'enter your district name',
                pin:'enter your pincode'

            } 
            })
      })

function profile_update(){
    let fname=document.getElementById('fname').value
    let lname=document.getElementById('lname').value
    let phone=document.getElementById('phone').value
    let alter=document.getElementById('alter').value
    let birth=document.getElementById('birth').value
    let email=document.getElementById('email').value
    
    axios({
            method: "post",
            url: "/edit_profile",
            data:{fname:fname,
            lname:lname,
            phone:phone,
            email:email,
            birthday:birth,
            alternate_no:alter,
            }
            
            }).then((response)=>{
                location.reload()
            }).catch((response)=>{

            })

    
}
function add_address(){
     let add=document.getElementById('add').value
    let locality=document.getElementById('locality').value
    let town=document.getElementById('town').value
    let district=document.getElementById('district').value
    let pincode=document.getElementById('pincode').value
    let add_name=document.getElementById('add_name').value
    if(add_name!='' && town!='' && locality!='' && pincode!='' && add!='' && district!='' ){
        axios({
            method: "post",
            url: "/add_address",
            data:{
                add1:add,
                locality:locality,
                town:town,
                district:district,
                pincode:pincode,
                name:add_name
            }
            
            }).then((response)=>{
                location.reload()
            }).catch((response)=>{

            })

    }
    
}
function deleteadd(id){

  axios({
            method: "post",
            url: "/delete_add",
            data:{id:id
            }
            
            }).then((response)=>{
                location.reload()
            }).catch((response)=>{

            })
  

}
</script>

